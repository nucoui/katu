{
  "name": "@chatora/util",
  "type": "module",
  "version": "0.0.1-beta.34",
  "private": false,
  "description": "Framework for creating custom elements with JSX function components",
  "author": "nuco <takuma-ru@takumaru.dev> (https://github.com/takuma-ru/)",
  "license": "MPL-2.0",
  "homepage": "https://github.com/nucoui/chatora",
  "repository": {
    "type": "git",
    "url": "https://github.com/nucoui/chatora/tree/main/packages/util"
  },
  "bugs": {
    "url": "https://github.com/nucoui/chatora/issues",
    "email": "takuma-ru@takumaru.dev"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./convert": {
      "types": "./dist/convert/main.d.ts",
      "import": "./dist/convert/main.js",
      "require": "./dist/convert/main.cjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "files": [
    "README.md",
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "eslint .",
    "test": "tsup && vitest run --coverage",
    "release": "rlse",
    "release:test": "rlse -l patch -k config,commit-changes,create-release-branch --dry-run"
  },
  "devDependencies": {
    "@chatora/config": "workspace:*",
    "@takuma-ru/rlse": "catalog:",
    "@vitest/coverage-v8": "3.1.1",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.1.1"
  }
}